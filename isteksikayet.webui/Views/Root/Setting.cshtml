@model SiteConfig
@{
    ViewData["Title"] = "Setting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    @if (TempData["Message"] != null)
{
    <div class="alert alert-danger">@TempData["Message"]</div>
}

    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Şikayet Ekle</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a asp-controller="root" asp-action="index">Anasayfa</a></li>
              <li class="breadcrumb-item active">Site Ayarları</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              
              <!-- /.card-header -->
              <!-- form start -->
              <form asp-controller="root" asp-action="Setting" method="post" enctype="multipart/form-data">
                <div class="card-body">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Smtp Host</label>
                    <input asp-for="Smtp" class="form-control" placeholder="Enter Smtp Host" value="@Model.Smtp">
                  </div>
                  <div class="form-group">
                    <label >Smtp Port</label>
                    <input asp-for="SmtpPort" class="form-control" value="@Model.SmtpPort">
                  </div>
                  <div class="form-group">
                    <label>Complaint Contains File</label>
                    <input asp-for="SmtpUser" value="@Model.SmtpUser" class="form-control">
                    <input type="hidden" asp-for="Id" value="@Model.Id" class="form-control">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Departman</label>
                    <input asp-for="SmtpPassword" type="password" value="@Model.SmtpPassword"  class="form-control">
                  </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
            <!-- /.card -->
          </div>
          <!--/.col (right) -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

