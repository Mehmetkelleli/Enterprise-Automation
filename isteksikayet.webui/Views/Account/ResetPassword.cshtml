@model ResetPassword
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="card">
    <div class="card-body login-card-body mt-2">
    @if(TempData["Message"] != null)
        {
            <div class="alert alert-danger">@TempData["Message"]</div>
        }

      <form asp-controller="Account" asp-action="ResetPassword" method="post">
        <div class="input-group mb-3">
          <input asp-for="Password" class="form-control" placeholder="Yeni Şifrenizi Giriniz">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <span class="text text-danger" asp-validation-for="Password"></span>
        <div class="input-group mb-3">
          <input asp-for="RePassword" class="form-control" placeholder="Şifrenizi Tekrar Giriniz">
          <input asp-for="UserId" value="@Model.UserId">
          <input asp-for="UserToken" value="@Model.UserToken">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <span class="text text-danger" asp-validation-for="RePassword"></span>
        <div class="row">
          <div class="col-8">
          </div>
          <!-- /.col -->
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Şifre Yenile</button>
          </div>
          <!-- /.col -->
        </div>
      </form>

      <!-- /.social-auth-links -->

      <p class="mb-1">
        <a href="forgot-password.html">Sifremi Unuttum</a>
      </p>
      <p class="mb-0">
        <a asp-controller="account" asp-action="register" class="text-center">Kaydol</a>
      </p>
    </div>
    <!-- /.login-card-body -->
  </div>
